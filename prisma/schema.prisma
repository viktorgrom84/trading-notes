// Define database connection via the `viktor_PRISMA_DATABASE_URL` env var
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("viktor_PRISMA_DATABASE_URL")
}

// User model
model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  
  // Relations
  trades       Trade[]
  
  @@map("users")
}

// Trade model
model Trade {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  symbol    String
  shares    Int
  buyPrice  Float    @map("buy_price")
  buyDate   DateTime @map("buy_date")
  sellPrice Float?   @map("sell_price")
  sellDate  DateTime? @map("sell_date")
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("trades")
}